{
  "compilerOptions": {
    "lib": ["es2019", "dom"],
    "target": "es2019",
    "module": "es2020",
    "noEmit": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "ignoreDeprecations": "5.0",
    "importHelpers": true,
  },
}
{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "customManagers:dockerfileVersions",
    "customManagers:githubActionsVersions"
  ],
  "labels": [
    "dependencies",
    "no-stale"
  ],
  "baseBranches": [
    "/^devrelease\\/.*/"
  ],
  "commitMessagePrefix": "⬆️",
  "commitMessageTopic": "{{depName}}",
  "configMigration": true,
  "rebaseWhen": "behind-base-branch",
  "dependencyDashboard": true,
  "major": {
    "dependencyDashboardApproval": true
  },
  "dependencyDashboardAutoclose": true,
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "//Dockerfile$/",
        "//build.yaml$/"
      ],
      "matchStringsStrategy": "any",
      "matchStrings": [
        "ARG BUILD_FROM=(?<depName>.*?):(?<currentValue>.*?)\\s+",
        "(aarch64|amd64|armhf|armv7|i386):\\s[\"']?(?<depName>.*?):(?<currentValue>.*?)[\"']?\\s"
      ],
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/)(?:.+\/)?build\\.yaml$"
      ],
      "matchStrings": [
        "SRAT_VERSION:\\s*(?<currentValue>\\S+)"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "dianlight/srat"
    }   
  ],
  "packageRules": [
    {
      "matchBaseBranches": "devrelease/sambanas",
      "matchFileNames": [
        "/sambanas2/**",
        "/besim/**",
        "plex/**",
        "RPiMySensor/**",
        "addon-plex/**"
      ],
      "enabled": false
    },
    {
      "matchBaseBranches": "devrelease/sambanas2",
      "matchFileNames": [
        "/sambanas/**",
        "/besim/**",
        "plex/**",
        "RPiMySensor/**",
        "addon-plex/**"
      ],
      "enabled": false
    },
    {
      "matchBaseBranches": "devrelease/besim",
      "matchFileNames": [
        "/sambanas2/**",
        "/sambanas/**",
        "plex/**",
        "RPiMySensor/**",
        "addon-plex/**"
      ],
      "enabled": false
    },
    {
      "groupName": "SambaNas",
      "matchBaseBranches": "devrelease/sambanas",
      "includePaths": [
        "/sambanas/**"
      ]
    },
    {
      "groupName": "SambaNas2",
      "matchBaseBranches": "devrelease/sambanas2",
      "includePaths": [
        "/sambanas2/**"
      ]
    },
    {
      "groupName": "BeSim",
      "matchBaseBranches": "devrelease/besim",
      "includePaths": [
        "/besim/**"
      ]
    },
    {
      "groupName": "Add-on base image",
      "matchDatasources": [
        "docker"
      ]
    },
    {
      "groupName": "Add-on base image",
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    },
    {
      "groupName": "SambaNas2 SRAT",
      "matchBaseBranches": "devrelease/sambanas2",
      "includePaths": [
        "/sambanas2/build.yaml"
      ],
      "matchDatasources": [
        "github-releases"
      ],
      "matchPackageNames": [
        "dianlight/srat"
      ]
    }    
  ]
}

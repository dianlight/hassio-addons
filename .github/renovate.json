{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    "customManagers:dockerfileVersions",
    "customManagers:githubActionsVersions",
    "group:monorepos",
    ":automergeDigest",
    "security:openssf-scorecard"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "labels": [
    "dependencies",
    "no-stale"
  ],
  "baseBranchPatterns": [
    "/^devrelease\\/.*/",
    "master"
  ],
  "commitMessagePrefix": "⬆️",
  "configMigration": true,
  "rebaseWhen": "behind-base-branch",
  "dependencyDashboard": true,
  "major": {
    "dependencyDashboardApproval": true
  },
  "dependencyDashboardAutoclose": true,
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "//Dockerfile$/",
        "//build.yaml$/"
      ],
      "matchStringsStrategy": "any",
      "matchStrings": [
        "ARG BUILD_FROM=(?<depName>.*?):(?<currentValue>.*?)\\s+",
        "(aarch64|amd64|armhf|armv7|i386):\\s[\"']?(?<depName>.*?):(?<currentValue>.*?)[\"']?\\s"
      ],
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
       "managerFilePatterns": [
        "//Dockerfile$/",
        "//build.yaml$/"
      ],
      "matchStrings": [
        "HA_CLI_VERSION=[\"']?(?<currentValue>.+?)[\"']?\\s+"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "home-assistant/cli",
      "versioningTemplate": "loose"
    },
    {
      "customType": "regex",
       "managerFilePatterns": [
        "//build.yaml$/"
      ],
      "matchStrings": [
        "SRAT_VERSION=[\"']?(?<currentValue>.+?)[\"']?\\s+"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "dianlight/srat",
      "versioningTemplate": "loose"
    },       
  ],
  "packageRules": [
    {
      "matchBaseBranches": [
        "master"
      ],
      "matchFileNames": [
        "sambanas/**",
        "sambanas2/**",
        "besim/**",
        "plex/**",
        "RPiMySensor/**",
        "addon-plex/**"
      ],
      "enabled": false
    },
    {
      "matchBaseBranches": "devrelease/sambanas",
      "matchFileNames": [
        ".github/**",
        "sambanas2/**",
        "besim/**",
        "plex/**",
        "RPiMySensor/**",
        "addon-plex/**"
      ],
      "enabled": false
    },
    {
      "matchBaseBranches": "devrelease/sambanas2",
      "matchFileNames": [
        ".github/**",
        "sambanas/**",
        "besim/**",
        "plex/**",
        "RPiMySensor/**",
        "addon-plex/**"
      ],
      "enabled": false
    },
    {
      "matchBaseBranches": "devrelease/besim",
      "matchFileNames": [
        ".github/**",
        "sambanas2/**",
        "sambanas/**",
        "plex/**",
        "RPiMySensor/**",
        "addon-plex/**"
      ],
      "enabled": false
    },
    {
      "groupName": "SambaNas",
      "matchBaseBranches": "devrelease/sambanas",
      "includePaths": [
        "sambanas/**"
      ]
    },
    {
      "groupName": "SambaNas2",
      "matchBaseBranches": "devrelease/sambanas2",
      "includePaths": [
        "sambanas2/**"
      ]
    },
    {
      "groupName": "BeSim",
      "matchBaseBranches": "devrelease/besim",
      "includePaths": [
        "besim/**"
      ]
    },
    {
      "matchBaseBranches": "devrelease/plex",
      "matchFileNames": [
        ".github/**",
        "sambanas/**",
        "sambanas2/**",
        "besim/**",
        "RPiMySensor/**",
        "addon-plex/**"
      ],
      "enabled": false
    },
    {
      "groupName": "Plex",
      "matchBaseBranches": "devrelease/plex",
      "includePaths": [
        "plex/**"
      ]
    },
    {
      "matchBaseBranches": "devrelease/RPiMySensor",
      "matchFileNames": [
        ".github/**",
        "sambanas/**",
        "sambanas2/**",
        "besim/**",
        "plex/**",
        "addon-plex/**"
      ],
      "enabled": false
    },
    {
      "groupName": "RPiMySensor",
      "matchBaseBranches": "devrelease/RPiMySensor",
      "includePaths": [
        "RPiMySensor/**"
      ]
    },
    {
      "matchBaseBranches": "devrelease/addon-plex",
      "matchFileNames": [
        ".github/**",
        "sambanas/**",
        "sambanas2/**",
        "besim/**",
        "plex/**",
        "RPiMySensor/**"
      ],
      "enabled": false
    },
    {
      "groupName": "Addon-Plex",
      "matchBaseBranches": "devrelease/addon-plex",
      "includePaths": [
        "addon-plex/**"
      ]
    },
    {
      "matchDatasources": [
        "github-releases"
      ],
      "matchDepNames": [
        "dianlight/srat"
      ],
      "allowedVersions": ">0.0.0-0"
    }
  ]
}
